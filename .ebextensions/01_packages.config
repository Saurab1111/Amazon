packages:
  yum:
    mysql-devel: []    # MySQL client libraries & headers for mysqlclient
    python3-devel: []  # Python C API headers
    gcc: []            # C compiler

container_commands:
  01_pip_upgrade:
    command: "source /var/app/venv/*/bin/activate && pip install --upgrade pip"
  02_install_requirements:
    command: "source /var/app/venv/*/bin/activate && pip install -r requirements.txt"
